<div class="w-75 mx-auto">
    <p class="fs-1">Edit products</p>
    {{#if errorEditProduct}}
        <div class="alert alert-danger alert-dismissible fade show" style="height: 70px" role="alert">
            <strong>Error</strong>
            <p>{{loginError}}</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {{/if}}
    <form action="/edit-product/{{product._id}}" method="post">
        <div class="form-floating mb-3">
            <input type="text" class="form-control" value="{{product.title}}" name="title" id="floatingInput" placeholder="title">
            <label for="floatingInput">Title</label>
        </div>
        <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="Description" name="description" id="floatingTextarea" style="height: 150px">{{product.description}}</textarea>
            <label for="floatingTextarea">Description</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" class="form-control" value="{{product.image}}" name="image" id="floatingInput" placeholder="title">
            <label for="floatingInput">Image</label>
        </div>
        <div class="input-group mb-3">
            <span class="input-group-text bg-light">$</span>
            <div class="form-floating">
                <input type="number" class="form-control" value="{{product.price}}" name="price" id="floatingInputGroup1" placeholder="Username">
                <label for="floatingInputGroup1">Price</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Edit product</button>
    </form>
</div>
